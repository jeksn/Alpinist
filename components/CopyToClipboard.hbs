                <h2 class="w-full mb-6 text-xl font-medium">Copy to clipboard</h2>
                <div class="flex flex-col w-full md:items-center gap-y-6 md:justify-between md:flex-row">
                  <div x-ref="textToCopy">This text that will be copied to the clipboard.</div>
                  <button @click="copyText" class="border-[#E1E2E3] w-50 border py-3 px-6 hover:bg-gray-50" x-text="copyMessage ? 'Copied!' : 'Copy Text'"></button>
                </div>
            </div>
          </div>
          
          <script>
              function clipboardComponent() {
                  return {
                      copyMessage: '',
                      copyText() {
                          // Get the text
                          const text = this.$refs.textToCopy.innerText;
                          navigator.clipboard.writeText(text)
                              .then(() => {
                                  this.copyMessage = 'Copied!';
                                  // Clear message after 2 seconds
                                  setTimeout(() => this.copyMessage = '', 2000);
                              })
                              .catch(err => {
                                  console.error('Could not copy text: ', err);
                                  this.copyMessage = 'Failed to copy!';
                                  // Clear message after 2 seconds
                                  setTimeout(() => this.copyMessage = '', 2000);
                              });
                      }
                  };
              }
          </script>
